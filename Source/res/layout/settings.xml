<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#E0FFFF"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/updateEM_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="@string/updateEM" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/updateUser_button"
        android:layout_alignRight="@+id/updateUser_button"
        android:layout_below="@+id/updateUser_button"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:text="@string/home" />

    <Button
        android:id="@+id/updateUser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/updateEM_button"
        android:layout_alignRight="@+id/updateEM_button"
        android:layout_below="@+id/updateEM_button"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:text="@string/update_user" />

</RelativeLayout>